{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "jsx": "React",
    "jsxFactory": "h",
    "lib": ["es6", "dom"],
    "mapRoot": "./src",
    "module": "es2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
